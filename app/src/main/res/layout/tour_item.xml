<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:clickable="false">

    <TextView
        android:id="@+id/TV_HISTORY_ITEM_DATE"
        style="@style/HistoryDateFont1"
        android:text="DATE"
        android:layout_alignParentTop="true"
        android:layout_width="90dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/TV_HISTORY_ITEM_DURATION"
        style="@style/HistoryDateFont1"
        android:text="DURATION"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/TV_HISTORY_ITEM_DATE"
        android:layout_width="90dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/TV_HISTORY_ITEM_DATE" >

        <TextView
            android:id="@+id/TV_HISTORY_ITEM_SPEED"
            style="@style/HistoryDateFont2"
            android:text="SPEED"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="fill_parent" />

        <TextView
            android:id="@+id/TV_HISTORY_ITEM_DISTANCE"
            style="@style/HistoryDateFont2"
            android:text="DISTANCE"
            android:gravity="center_vertical|right"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    </LinearLayout>

</RelativeLayout>